#!/bin/sh
name="v2ray"
config="/work/config/$name"
mkdir -p $config

if [ ! -f "$config/config.json" ]; then
    echo "init $name configure"
    cp -a /build/config/$name/config.json $config
fi

if [ ! -f "$config/geoip.dat" ]; then
    echo "init $name configure"
    cp -a /build/config/$name/geoip.dat $config
fi

if [ ! -f "$config/geosite.dat" ]; then
    echo "init $name configure"
    cp -a /build/config/$name/geosite.dat $config
fi

exec v2ray -config $config/config.json
